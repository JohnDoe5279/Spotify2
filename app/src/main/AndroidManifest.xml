<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bensquared.spotify">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <!-- Couldn't swtich activites because not declared in manifest -->

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" /> <!-- Launcher splash screen -->
            </intent-filter>
        </activity>
        <activity
            android:name=".NeedLotHaveLot"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity
            android:name=".Data"
            android:label="@string/title_activity_data"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PickYourSpot"
            android:label="@string/title_activity_pick_your_spot"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".Reservation"
            android:label="Reservation"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".MySpot"
            android:label="Checkout"
            android:screenOrientation="portrait"></activity>

        <activity
            android:name=".Pop"
            android:theme="@style/AppTheme.CustomTheme"
            ></activity>

        <activity
            android:name=".Pop2"
            android:theme="@style/AppTheme.CustomTheme"
            ></activity>
    </application>


</manifest>